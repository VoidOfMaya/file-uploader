<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles.css">
    <title>file-uploader</title>
</head>
<body>
    <header>
            <h1> welcome to file uploader!</h1>
    </header>
    <main>

        <% if(user){ %>
            <h3>welcome <%= user.firstName %></h3>
            <form action="/upload/file" method="post" enctype="multipart/form-data">
            <input type="file" name="upFile" />
            <button>Upload</button>
            </form>
            <a href="/auth/logout">logout</a>            
            </div>
        <% } else { %>
            <h3>please log in!</h3>
            <form method="post" action="/auth/login">
                <label for="username">Username:</label>
                <input name="username" type="text">

                <label for="password">Password</label>
                <input name="password" type="password">
                <button>log in</button>
            </form>
            <button type="button" id="register-form">register</button>            
        <% } %>
        <section id="my-files">
            <%if(user && files){%>
                <ul>
                <% files.forEach(file => { %>
                    <li> <%= file.originalName %>  
                    <%= file.mimeType %>  
                    <%= Math.round((file.size/ 1024)* 100)/100 %>Kb 
                    <%= file.uploadTime %> </li>
                <% }) %>
    
                </ul>
            <% }else { %>
                <p>your storage is empty!</p>
            <% } %>

        </section>

    </main>

    <dialog id="register">
        <h5 style="justify-self: center;">all fields are required!</h5>
        <form class="sign-up-form" id="sign-up-form" method="post" action="/auth/register">
            <label  style="grid-area: fn-l;" for="firstName">First name</label>
            <input  style="grid-area: fn-i;"name="firstName" type="text" minlength="3" maxlength="12" required>

            <label  style="grid-area: ln-l;" for="lastName">Last name</label>
            <input  style="grid-area: ln-i;" name="lastName" type="text" minlength="3" maxlength="12" required>

            <label  style="grid-area: u-l;"  for="username">Username:</label>
            <input  style="grid-area: u-i;"  name="username" type="text" minlength="4" maxlength="24"required>

            <label  style="grid-area: p-l;"  for="password">Password</label>
            <input  style="grid-area: p-i;"  id="sign-up-password"  
                    name="password" type="password" minlength="5" maxlength="30" required>

            <label  style="grid-area: pc-l;" for="confirmPassword">Confirm password</label>
            <input  style="grid-area: pc-i;"  id="sign-up-confirm-password" name="confirmPassword" type="password" required>

            <button type="submit" id="register-button">register</button>
            <button id="close-dialog" type="button">cancel</button>
        </form>
    </dialog>

    <script>
        //displays and hides dialog
        const dialogBtn = document.getElementById('register-form');
        const closeBtn = document.getElementById('close-dialog');
        const dialogForm = document.getElementById('register');

        dialogBtn.addEventListener('click',()=>{
            dialogForm.showModal();
        });
        closeBtn.addEventListener('click',()=>{
            dialogForm.close();
        });
        //password confirmation validation
        const pass = document.getElementById('sign-up-password');
        const confirmPass = document.getElementById('sign-up-confirm-password');
        const submitFormBtn = document.getElementById('register-button');
        submitFormBtn.disabled = true;

        const matchPasswords = (passwordOne, passwordTwo)=>{
            if(passwordOne ===passwordTwo){
                confirmPass.classList.remove('invalid-input');
                confirmPass.classList.add('valid-input');
                    
                submitFormBtn.disabled = false
                return
            }
            confirmPass.classList.remove('valid-input');
            confirmPass.classList.add('invalid-input');
            submitFormBtn.disabled = true
        }


        let passOne;
        let passTwo;
        pass.addEventListener('input',(e)=>{
            passOne =e.target.value
            matchPasswords(passOne, passTwo);
        })
        confirmPass.addEventListener('input',(e)=>{
            passTwo =e.target.value
            matchPasswords(passOne, passTwo);      

        })

    </script>
    
    
</body>
</html>
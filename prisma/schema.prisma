generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}
//sessiontable: sid varchar/ sess json/ expire timestamp
model Session{
  id      String      @id
  sid     String      @unique
  data    String 
  expiresAt  DateTime  
  @@map("sessions")
}

//main db

model User{
  id        Int     @id @default(autoincrement())
  firstName String  @map("First_name")
  lastName  String  @map("Last_name")
  username  String  @unique
  password  String
  file      file[] 
  folder    Folder[]

  @@map("users")
}
model Folder{
  id        Int     @id @default(autoincrement())
  name      String
  user      User    @relation(fields: [userId],references: [id])
  userId    Int
  files     file[]
  @@map("folders")
}
model file{
  id                Int      @id @default(autoincrement())
  user              User     @relation(fields: [userId],references: [id])
  userId            Int      @map("user_id")
  uploadTime        DateTime @default(now())

  folder            Folder?    @relation(fields: [folderId],references: [id])
  folderId          Int?

  originalName      String
  fileName          String
  mimeType          String
  size              Int
  path              String

}